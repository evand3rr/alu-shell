#!/usr/bin/env bash
#This script displays the time for 12 hours and 59 minutes, display hours from 0 to 12 and display minutes from 1 to 59

# Loop through hours
while [ $hour -le 12 ]; do
  # Reset minute counter for each hour
  minute=1

  # Loop through minutes
  while [ $minute -le 59 ]; do
    # Display the current time
    echo "$hour hours and $minute minutes"
    ((minute++))
  done

  ((hour++))
done | head -n 70
